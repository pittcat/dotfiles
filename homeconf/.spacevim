function! UserInit()

  " Space has been set as the default leader key,
  " if you want to change it, uncomment and set it here.
  " let g:spacevim_leader = "<\Space>"
  let g:spacevim_localleader = ','
  Plug 'tweekmonster/startuptime.vim'
  Plug 'tpope/vim-scriptease'
  Plug 'glepnir/zephyr-nvim'
endfunction



" Put your costom configurations here, e.g., change the colorscheme.
function! UserConfig()


  " If you enable airline layer and have installed the powerline fonts, set it here.
  " let g:airline_powerline_fonts=1
  set ttimeoutlen=100
  set termguicolors
  color desert

  nnoremap <silent> <localleader>tt :StartupTime<cr>
  autocmd FileType vim nnoremap <buffer> <F5> :source %<cr>
  nnoremap <silent> <localleader>pu :UpdateRemotePlugins<cr>
  let g:python3_host_prog='/usr/bin/python3'
  " theme setting
  "{glepnir/zephyr-nvim
  colorscheme zephyr
  let g:lightline.colorscheme = 'deus'
  highlight VemTablineSelected         term=bold    cterm=bold ctermfg=0   ctermbg=255 guifg=#242424 guibg=#ffffff gui=bold
  augroup illuminate_augroup
      autocmd!
      autocmd VimEnter * hi illuminatedWord cterm=NONE ctermbg=0 ctermfg=NONE guibg=Gray35
  augroup END
  "}
endfunction
